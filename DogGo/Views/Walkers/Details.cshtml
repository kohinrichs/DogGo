@model DogGo.Models.ViewModels.WalkerProfileViewModel

@{ ViewData["Title"] = "Walker Profile"; }
<div>
    <section class="container">
        <img style="width:100px;float:left;margin-right:20px"
             src="@Model.Walker.ImageUrl" />
        <div>
            <label class="font-weight-bold">Name:</label>
            <span>@Model.Walker.Name</span>
        </div>
        <div>
            <label class="font-weight-bold">Neighborhood:</label>
            <span>@Model.Walker.Neighborhood.Name</span>
        </div>
        <div>
            @Html.ActionLink("Edit", "Edit", new { id = Model.Walker.Id })
        </div>
    </section>

    <hr class="mt-5" />
    <div class="clearfix"></div>

    <div class="row">
        <section class="col-8 container mt-5">
            <h1 class="text-left">Recent Walks</h1>

           @*<div class="row">
                @foreach (Walk walk in Model.Walks)
                {
                    <div class="list-group-item disabled" aria-disabled="true">
                        <span class="font-weight-bold ml-4">@walk.Duration</span>
                    </div>
                }
            </div> *@

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            <label class="font-weight-bold">Date</label>
                        </th>
                        <th>
                            <label class="font-weight-bold">Client</label>
                        </th>
                        <th>
                            <label class="font-weight-bold">Duration</label>
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Walk walk in Model.Walks)
                    {
                        <tr>
                            <td>
                                <div>@walk.Date.Date.ToString("MM/dd/yyyy")</div>
                            </td>
                            <td>
                                <div>@walk.DogId</div>
                            </td>
                            <td>
                                <div>@(@walk.Duration/60) min</div>
                            </td>
                         </tr>
                    }
                 </tbody>
                </table>
           </section>
     </div>
</div>
<section class="col-lg-4 col-md-8 container mt-5">
    <h1>Total Walk Time:</h1>

    @*<ul class="list-group mt-4">
        @foreach (Walk walk in Model.Walks)
        {
            @(@walk.Duration)
        }
    </ul> *@
</section>
